@page
@model AspNetCoreIdentity.Pages.LoginModel
@{
}


<div class="container">
    <div class="md-12">
        <h1>Login</h1>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger">
            </div>
            <div class="md-3">
                <label class="form-label" asp-for="Model.EmailId">Email Address</label>
                <input type="text" asp-for="Model.EmailId" class="form-control" />
                <span asp-validation-for="Model.EmailId" class="text-danger"></span>
            </div>
            <div class="md-3">
                <label class="form-label" asp-for="Model.Password">Password</label>
                <input type="password" asp-for="Model.Password" class="form-control" />
                <span asp-validation-for="Model.Password" class="text-danger"></span>
            </div>
            <div class="md-3">
                <label class="form-label" asp-for="Model.RememberMe">Remember Me</label>
                <input type="checkbox" asp-for="Model.RememberMe"  />
            </div>
            <div class="md-3">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
    </div>
</div>